<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_system"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/homepagebg" />
    </LinearLayout>

    <com.zhiziyun.dmptest.bot.util.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/pager"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <LinearLayout
            android:id="@+id/lv_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/image_small">

            <ImageView
                android:id="@+id/iv_homepage"
                android:layout_width="@dimen/padding_left_right4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_homepage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/homeActivity_homepage"
                android:textColor="@color/dibudaohang"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_visitors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/image_small">

            <ImageView
                android:id="@+id/iv_visitors"
                android:layout_width="@dimen/padding_left_right4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_visitors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/homeActivity_visitors"
                android:textColor="@color/dibudaohang"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lv_generalize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv_generalize"
                android:layout_width="@dimen/padding_left_right4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_generalize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/homeActivity_generalize"
                android:textColor="@color/dibudaohang"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_crowd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv_crowd"
                android:layout_width="@dimen/padding_left_right4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_crowd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/homeActivity_crowd"
                android:textColor="@color/dibudaohang"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv_my"
                android:layout_width="@dimen/padding_left_right4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/homeActivity_my"
                android:textColor="@color/dibudaohang"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>