<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="公众号"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_title_tvtitle" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_left_right4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="公众号"
                android:textSize="@dimen/textsizi3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="公众号"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsizi" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="id"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsizi" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="绑定公众号"
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_BindingWeChatSubscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="未绑定"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="授权广告投放"
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_AuthorizationAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="未绑定"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="开通公众号广告主"
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_WeChatSubscriptionAdvertiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="未开通"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_unbundling"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:background="@color/blue"
            android:text="申请解绑"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>