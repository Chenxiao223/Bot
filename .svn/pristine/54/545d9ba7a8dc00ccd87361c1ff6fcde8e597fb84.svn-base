<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="编辑客户"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="客 户："
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:maxEms="15"
                android:singleLine="true"
                android:textSize="@dimen/textsizi3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_charger"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="负责人："
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_charger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:maxEms="15"
                android:singleLine="true"
                android:textSize="@dimen/textsizi3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="备 注："
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:maxEms="15"
                android:singleLine="true"
                android:textSize="@dimen/textsizi3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="客户类型"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img1"
                android:layout_toStartOf="@+id/img1"
                android:text="类型 "
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />


            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_mark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="跟进状态"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img2"
                android:layout_toStartOf="@+id/img2"
                android:text="状态 "
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="跟进记录"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_right"
            android:text="客户类型"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_left_right"
            android:layout_marginTop="@dimen/padding_left_right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_ordinary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="普通客户"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_low_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="低价值客户"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="积极客户"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_high_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="高价值客户"
                android:textSize="@dimen/textsizi" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_right"
            android:text="跟进状态"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_left_right"
            android:layout_marginTop="@dimen/padding_left_right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_new_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="新转入"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_temporarily_not_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="暂无意向"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_continue_further"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="持续跟进"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_submitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="已成交"
                android:textSize="@dimen/textsizi" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>