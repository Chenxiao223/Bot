<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="编辑人群"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_left_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客 户："
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="40"
                android:singleLine="true"
                android:textSize="@dimen/textsizi3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="负责人："
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_charger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="40"
                android:singleLine="true"
                android:textSize="@dimen/textsizi3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备 注："
                android:textColor="@color/black"
                android:textSize="@dimen/textsizi3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsizi3" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_right"
            android:text="客户类型"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_left_right"
            android:layout_marginTop="@dimen/padding_left_right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_ordinary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="普通客户"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_low_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="低价值客户"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="积极客户"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_high_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="高价值客户"
                android:textSize="@dimen/textsizi" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_right"
            android:text="跟进状态"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_left_right"
            android:layout_marginTop="@dimen/padding_left_right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_new_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="新转入"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_temporarily_not_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="暂无意向"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_continue_further"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="持续跟进"
                android:textSize="@dimen/textsizi" />

            <RadioButton
                android:id="@+id/rb_submitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:button="@drawable/shape_sel"
                android:checked="false"
                android:text="已成交"
                android:textSize="@dimen/textsizi" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_left_right5"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:background="@color/blue"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>