<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_home_bottom"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:layout_toEndOf="@+id/cb_group"
                android:layout_toRightOf="@+id/cb_group"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="group text"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_home_bottom"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:layout_toEndOf="@+id/cb_group"
                android:layout_toRightOf="@+id/cb_group"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="group text"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_home_bottom"
                android:layout_marginLeft="@dimen/padding_left_right"
                android:layout_toEndOf="@+id/cb_group"
                android:layout_toRightOf="@+id/cb_group"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="group text"
                android:textSize="@dimen/textsizi" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_jiantou"
            android:layout_width="@dimen/padding_left_right4"
            android:layout_height="@dimen/padding_left_right4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>