<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_home_bottom"
            android:layout_marginLeft="@dimen/padding_left_right"
            android:layout_toEndOf="@+id/cb_group"
            android:layout_toRightOf="@+id/cb_group"
            android:gravity="center_vertical"
            android:text="group text"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsizi3" />

        <ImageView
            android:id="@+id/iv_jiantou"
            android:layout_width="@dimen/padding_left_right4"
            android:layout_height="@dimen/padding_left_right4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>