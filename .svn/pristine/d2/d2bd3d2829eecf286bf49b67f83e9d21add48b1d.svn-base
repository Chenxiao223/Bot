<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创意制作"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_left_right">

            <ImageView
                android:id="@+id/iv_gt1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h"
                android:src="@drawable/gt1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h"
                android:src="@drawable/gt2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gt3"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_left_right"
                android:src="@drawable/gt4"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h"
                android:src="@drawable/gt1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h"
                android:layout_marginTop="@dimen/padding_left_right"
                android:src="@drawable/gt2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h"
                android:src="@drawable/gt7"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h"
                android:layout_marginTop="@dimen/padding_left_right"
                android:src="@drawable/gt8"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt9"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/gt9"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/padding_left_right"
                android:src="@drawable/gt10"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_gt11"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/padding_left_right"
                android:src="@drawable/gt11"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>