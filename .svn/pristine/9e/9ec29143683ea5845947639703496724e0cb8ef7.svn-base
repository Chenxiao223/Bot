<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="基本信息"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_shadow"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text=" 活动名称："
                android:textSize="@dimen/textsizi" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入易记的名称"
                android:lines="1"
                android:maxLength="40"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/textsizi" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:id="@+id/rl_AD_types"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white">

            <TextView
                android:id="@+id/text18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text18"
                android:layout_toRightOf="@+id/text18"
                android:gravity="center_vertical"
                android:text=" 广告类型："
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_AD_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img8"
                android:layout_toStartOf="@+id/img8"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:id="@+id/rl_beginTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text1"
                android:layout_toRightOf="@+id/text1"
                android:gravity="center_vertical"
                android:text=" 开始时间："
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_beginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img1"
                android:layout_toStartOf="@+id/img1"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:id="@+id/rl_endTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text2"
                android:layout_toRightOf="@+id/text2"
                android:gravity="center_vertical"
                android:text=" 结束时间："
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img2"
                android:layout_toStartOf="@+id/img2"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="朋友圈广告的投放需小于等于10个自然日"
            android:textColor="@color/gray"
            android:textSize="@dimen/activity_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:id="@+id/rl_time_slot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text=" 投放时段："
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_time_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img3"
                android:layout_toStartOf="@+id/img3"
                android:text="不限"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text5"
                android:layout_toRightOf="@+id/text5"
                android:gravity="center_vertical"
                android:text=" 每日预算："
                android:textSize="@dimen/textsizi" />

            <EditText
                android:id="@+id/edit_budget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/text6"
                android:layout_toRightOf="@+id/text7"
                android:background="@null"
                android:digits="1234567890."
                android:gravity="center_vertical|right"
                android:hint="最少为1000"
                android:inputType="number"
                android:lines="1"
                android:maxLength="10"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="元 "
                android:textSize="@dimen/textsizi" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_left_right4"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:background="@color/blue"
            android:text="@string/next"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>