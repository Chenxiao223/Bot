<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_left_right"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4"
        android:paddingTop="@dimen/padding_left_right">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/text2"
            android:textSize="@dimen/textsizi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="发送人数"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="发送进度"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height2"
        android:background="@color/list_line" />
</LinearLayout>