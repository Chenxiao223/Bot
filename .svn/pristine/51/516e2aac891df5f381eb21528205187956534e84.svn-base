<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/traceroute_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_login"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:src="@drawable/zhiziyunlogo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="@dimen/activity_title"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_title"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Email"
                android:maxLength="40"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/iv_emal"
                android:layout_width="@dimen/activity_title"
                android:layout_height="@dimen/activity_title"
                android:padding="15dp"
                android:src="@drawable/iv_cross"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grayline" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="@dimen/activity_title"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_title"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="40"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="@dimen/activity_title"
                android:layout_height="@dimen/activity_title"
                android:padding="15dp"
                android:src="@drawable/iv_cross"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grayline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="140dp"
                android:layout_height="@dimen/buttom_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="70dp"
                android:background="@drawable/shape_btn"
                android:text="登 录"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>