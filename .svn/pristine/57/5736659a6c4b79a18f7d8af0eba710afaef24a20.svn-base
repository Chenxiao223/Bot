<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="绑定微信公众号"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_title_tvtitle" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_bind"
        android:layout_width="@dimen/listview_h2"
        android:layout_height="@dimen/listview_h2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/listview_h3"
        android:src="@drawable/open_wechat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_left_right"
        android:gravity="center"
        android:text="已开通微信公众号"
        android:textColor="@color/blue" />

    <ImageView
        android:id="@+id/iv_not_bind"
        android:layout_width="@dimen/listview_h2"
        android:layout_height="@dimen/listview_h2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/listview_h3"
        android:src="@drawable/no_open_wechat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_left_right"
        android:gravity="center"
        android:text="暂未开通微信公众号"
        android:textColor="@color/blue" />

</LinearLayout>