<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/listview_h"
                android:layout_height="match_parent"
                android:padding="@dimen/textsizi2"
                android:src="@drawable/default_head2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_top"
                android:paddingTop="@dimen/padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_brands"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APPLE"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (mac："
                        android:textColor="@color/text2"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="349672047e18"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ) "
                        android:textColor="@color/text2"
                        android:textSize="@dimen/textsizi" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="探到时间："
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_sp_12" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/time"
                        android:layout_toRightOf="@+id/time"
                        android:text="349672047e1"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_sp_12" />


                    <ImageView
                        android:layout_width="@dimen/padding_left_right3"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/padding_left_right"
                        android:padding="@dimen/image_small"
                        android:tint="@color/list_line"
                        android:src="@drawable/click" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="距离："
                                android:textColor="@color/text3"
                                android:textSize="@dimen/text_sp_12" />

                            <TextView
                                android:id="@+id/tv_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="APPLE"
                                android:textColor="@color/text3"
                                android:textSize="@dimen/text_sp_12" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/list_line" />

    </RelativeLayout>
</LinearLayout>