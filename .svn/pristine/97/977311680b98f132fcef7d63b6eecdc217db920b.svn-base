<?xml version="1.0" encoding="utf-8"?>
<lib.homhomlib.design.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slidingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:background_view="@layout/view_bg"
    app:sliding_mode="both"
    tools:layout_editor_absoluteX="@dimen/absolute"
    tools:layout_editor_absoluteY="@dimen/absolute">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/relativeLayout_h"
            android:background="@drawable/homepagebg">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/imagview_w_h"
                android:layout_height="@dimen/imagview_w_h"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/imagview_top"
                android:src="@drawable/head" />

            <ImageView
                android:layout_width="@dimen/imagview_w_h"
                android:layout_height="@dimen/imagview_w_h"
                android:layout_alignLeft="@+id/iv_head"
                android:layout_alignStart="@+id/iv_head"
                android:layout_alignTop="@+id/iv_head"
                android:background="@drawable/shape_round" />

            <TextView
                android:id="@+id/tv_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_top"
                android:ellipsize="end"
                android:maxEms="18"
                android:singleLine="true"
                android:text="上海智子信息科技股份有限公司"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/control_padding"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/accounts" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView3"
                        android:layout_toRightOf="@+id/imageView3"
                        android:text="账户"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_1"
                        android:layout_toStartOf="@+id/iv_1"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/textsizi" />

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_store"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/stores" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView4"
                        android:layout_toRightOf="@+id/imageView4"
                        android:text="门店"
                        android:textSize="@dimen/title_text_size" />

                    <ImageView
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_originality"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/originality" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView5"
                        android:layout_toRightOf="@+id/imageView5"
                        android:text="我的创意"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:layout_toStartOf="@+id/imageView2"
                        android:text="广告素材制作"
                        android:textSize="@dimen/textsizi" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/sms" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView6"
                        android:layout_toRightOf="@+id/imageView6"
                        android:text="短信"
                        android:textSize="@dimen/title_text_size" />

                    <ImageView
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/qualification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView7"
                        android:layout_toRightOf="@+id/imageView7"
                        android:text="资质"
                        android:textSize="@dimen/title_text_size" />

                    <ImageView
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call_records"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/phone4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView8"
                        android:layout_toRightOf="@+id/imageView8"
                        android:text="通话记录"
                        android:textSize="@dimen/title_text_size" />

                    <ImageView
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/image_small">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/phonenm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView9"
                        android:layout_toRightOf="@+id/imageView9"
                        android:text="本机号码"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView10"
                        android:layout_toStartOf="@+id/imageView10"
                        android:textSize="@dimen/textsizi" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="@dimen/imagview_top"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/padding"
                        android:src="@drawable/click" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</lib.homhomlib.design.SlidingLayout>