<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="探针详情"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left_right"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sp_16" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_shadow"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="探针名称："
                android:textColor="@color/text"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/list_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="所属门店："
                android:textColor="@color/text"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_stores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/list_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="识别码："
                android:textColor="@color/text"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_tanzhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_marginBottom="@dimen/padding_left_right5"
            android:layout_marginLeft="@dimen/padding_left_right"
            android:layout_marginRight="@dimen/padding_left_right"
            android:layout_marginTop="@dimen/padding_left_right5"
            android:background="@color/blue"
            android:text="解绑"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>