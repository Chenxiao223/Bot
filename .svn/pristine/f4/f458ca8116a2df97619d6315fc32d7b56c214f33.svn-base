<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/iv_system"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg2" />

    <RelativeLayout
        android:id="@+id/rl_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="创建广告活动"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/rl_ll"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/advertbg2" />

    <RelativeLayout
        android:id="@+id/tv_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textColor="@color/sixty_alpha_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择人群"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="选择创意"
            android:textColor="@color/sixty_alpha_white" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_base"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_shadow"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <RelativeLayout
            android:id="@+id/rl_crowd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_left_right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="到店人群"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_crowd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView1"
                android:layout_toStartOf="@+id/imageView1"
                android:text="请选择"
                android:textColor="@color/text3"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/imagview_top"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding"
                android:src="@drawable/click" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wifi_crowd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_left_right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="wifi人群"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_wifi_crowd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:text="请选择"
                android:textColor="@color/text3"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/imagview_top"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding"
                android:src="@drawable/click" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_click_crowd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="点击人群"
                android:textSize="@dimen/textsizi" />

            <TextView
                android:id="@+id/tv_click_crowd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3"
                android:text="请选择"
                android:textColor="@color/text3"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/imagview_top"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/padding"
                android:src="@drawable/click" />

        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttom_height"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_select"
        android:text="@string/next"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>