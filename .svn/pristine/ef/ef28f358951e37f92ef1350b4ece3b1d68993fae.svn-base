<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiziyun.dmptest.bot.ui.activity.SubmitFriendActivitty">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:layout_below="@+id/iv_system"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择创意"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_template"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="模板"
            android:textSize="@dimen/textsizi" />

        <TextView
            android:id="@+id/tv_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="请选择"
            android:textColorHint="@color/text3"
            android:textSize="@dimen/textsizi" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="落地页"
            android:textSize="@dimen/textsizi" />

        <EditText
            android:id="@+id/et_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入落地页URL"
            android:textColor="@color/text3"
            android:textColorHint="@color/text3"
            android:textSize="@dimen/textsizi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_productRefsId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="门店ID"
            android:textSize="@dimen/textsizi" />

        <EditText
            android:id="@+id/et_productRefsId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入门店ID"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/textsizi" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否分享"
            android:textSize="@dimen/textsizi" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img1"
            android:layout_toStartOf="@+id/img1"
            android:text="否"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsizi" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_top_buttom"
            android:paddingTop="@dimen/padding_top_buttom"
            android:src="@drawable/click" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_share_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="分享标题"
            android:textSize="@dimen/textsizi" />

        <EditText
            android:id="@+id/et_share_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入标题(1-14字)"
            android:lines="1"
            android:maxLength="14"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/textsizi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_share_describe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="分享描述"
            android:textSize="@dimen/textsizi" />

        <EditText
            android:id="@+id/et_share_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入描述(1-20字)"
            android:lines="1"
            android:maxLength="20"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/textsizi" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_template"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_next" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_left_right4"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:layout_marginTop="@dimen/padding_left_right"
            android:background="@color/blue"
            android:text="@string/commit"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>
