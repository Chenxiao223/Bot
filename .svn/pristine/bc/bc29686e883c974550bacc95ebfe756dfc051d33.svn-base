<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="@dimen/padding_left_right3"
        android:layout_marginLeft="@dimen/padding_left_right3"
        android:layout_marginRight="@dimen/padding_left_right3"
        android:layout_marginTop="@dimen/padding_left_right3"
        android:background="@drawable/shape_graybg"
        android:orientation="vertical"
        android:padding="@dimen/padding_left_right4">

        <TextView
            android:id="@+id/tv_shareqq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="分享到QQ"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:scaleType="fitXY"
            android:src="@drawable/grayline" />

        <TextView
            android:id="@+id/tv_sharewechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="分享到微信"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>
</LinearLayout>