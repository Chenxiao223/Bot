<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg2" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="客 户"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/search"
            android:tint="#ffffff" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/white"
            android:textSize="@dimen/textsizi" />

        <TextView
            android:id="@+id/tv_have_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已拨打"
            android:textColor="@color/white"
            android:textSize="@dimen/textsizi" />

        <TextView
            android:id="@+id/tv_not_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未拨打"
            android:textColor="@color/white"
            android:textSize="@dimen/textsizi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="@dimen/image_small"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center" />

        <View
            android:id="@+id/view_have_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="invisible" />

        <View
            android:id="@+id/view_not_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line2"
        android:layout_marginTop="@dimen/image_small"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_left_right5"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_customer_source"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_customer_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="客户来源"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/textsizi" />

                <ImageView
                    android:id="@+id/iv_customer_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/image_small"
                    android:layout_toEndOf="@+id/tv_customer_source"
                    android:layout_toRightOf="@+id/tv_customer_source"
                    android:src="@drawable/drop_down"
                    android:tint="@color/text2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_customer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="全部客户类型"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/textsizi" />

                <ImageView
                    android:id="@+id/iv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/image_small"
                    android:layout_toEndOf="@+id/tv_customer"
                    android:layout_toRightOf="@+id/tv_customer"
                    android:src="@drawable/drop_down"
                    android:tint="@color/text2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="全部跟进状态"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/textsizi" />

                <ImageView
                    android:id="@+id/iv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/image_small"
                    android:layout_toEndOf="@+id/tv_follow"
                    android:layout_toRightOf="@+id/tv_follow"
                    android:src="@drawable/drop_down"
                    android:tint="@color/text2" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/loading" />

            <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    srlClassicsSpinnerStyle="FixedBehind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                    android:id="@+id/lv_crowd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:divider="@null" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <include
                android:id="@+id/line_page"
                layout="@layout/layout_hides_customer" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>