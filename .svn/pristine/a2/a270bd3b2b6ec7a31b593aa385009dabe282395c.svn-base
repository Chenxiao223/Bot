<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创意制作"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="@dimen/listview_h2"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_marginLeft="272dp"
                    android:src="@drawable/addpictrue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/childrenb1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/image_small">

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="填写文字"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/padding_left_right3"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/title_text_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:hint="填写文字"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/padding_left_right3"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/textsizi" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="@dimen/listview_h2"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="272dp"
                    android:background="@color/touming" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/imagview_top"
                android:layout_marginTop="@dimen/padding_left_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text=" URL："
                    android:textSize="@dimen/textsizi3" />

                <EditText
                    android:id="@+id/edit_url"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/textsizi" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_picture2"
                    android:layout_width="@dimen/listview_h2"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/addpictrue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/childrenb2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image_small">

                    <EditText
                        android:id="@+id/et_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="填写文字"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="#2abee6"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/textsizi4"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_text3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_horizontal|bottom"
                            android:hint="填写文字"
                            android:maxLength="20"
                            android:paddingBottom="1dp"
                            android:paddingLeft="@dimen/padding_left_right3"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/title_text_size" />

                        <EditText
                            android:id="@+id/et_text4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_horizontal|top"
                            android:hint="填写文字"
                            android:maxLength="20"
                            android:paddingLeft="@dimen/padding_left_right3"
                            android:paddingTop="1dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/textsizi3" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_center"
                    android:layout_width="@dimen/listview_h2"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/touming" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/imagview_top"
                android:layout_marginTop="@dimen/padding_left_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text=" URL："
                    android:textSize="@dimen/textsizi3" />

                <EditText
                    android:id="@+id/edit_url2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/textsizi" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listview_h2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/childrenb3"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/image_small">

                    <EditText
                        android:id="@+id/et_text6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_horizontal|bottom"
                        android:hint="填写文字"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/padding_left_right3"
                        android:singleLine="true"
                        android:textColor="#9c8077"
                        android:textColorHint="#9c8077"
                        android:textSize="@dimen/textsizi6"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_text7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="填写文字"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/padding_left_right3"
                        android:singleLine="true"
                        android:textColor="#9c8077"
                        android:textColorHint="#9c8077"
                        android:textSize="@dimen/textsizi" />

                    <EditText
                        android:id="@+id/et_text8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_horizontal|top"
                        android:hint="填写文字"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/padding_left_right3"
                        android:singleLine="true"
                        android:textColor="#9c8077"
                        android:textColorHint="#9c8077"
                        android:textSize="@dimen/textsizi3" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/imagview_top"
                android:layout_marginTop="@dimen/padding_left_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text=" URL："
                    android:textSize="@dimen/textsizi3" />

                <EditText
                    android:id="@+id/edit_url3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/textsizi" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttom_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/padding_left_right3"
                android:layout_marginLeft="@dimen/padding_left_right2"
                android:layout_marginRight="@dimen/padding_left_right2"
                android:background="@color/blue"
                android:text="提交"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>