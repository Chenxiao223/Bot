                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_data6"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_data7"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
