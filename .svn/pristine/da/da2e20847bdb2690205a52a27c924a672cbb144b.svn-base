            <TextView
                android:id="@+id/item_data11"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/blue" />
        </LinearLayout>
    </com.zhiziyun.dmptest.bot.util.CHScrollView_fragment>

</LinearLayout>