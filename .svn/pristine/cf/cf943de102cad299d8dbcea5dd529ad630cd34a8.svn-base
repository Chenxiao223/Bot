<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_left_right">

    <ImageView
        android:id="@+id/iv_template_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_h"
        android:src="@drawable/appliances1" />

    <ImageView
        android:id="@+id/iv_template_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_h"
        android:src="@drawable/appliances2" />

    <ImageView
        android:id="@+id/iv_template_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_h"
        android:src="@drawable/appliances3" />

    <ImageView
        android:id="@+id/iv_template_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/appliances4"
        android:visibility="visible"/>

</LinearLayout>