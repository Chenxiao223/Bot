<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/homepagebg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/padding_left_right"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginRight="5dp">

                                <ImageView
                                    android:id="@+id/iv_head"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/head" />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/shape_round" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_companyname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxEms="8"
                                android:singleLine="true"
                                android:text="上海智子信息"
                                android:textColor="@color/white"
                                android:textSize="@dimen/title_text_size" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_home">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="   门店  "
                                        android:textColor="@color/light_grey"
                                        android:textSize="@dimen/textsizi3" />

                                    <TextView
                                        android:id="@+id/tv_story"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0个"
                                        android:textColor="@color/light_grey"
                                        android:textSize="@dimen/textsizi3"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="  探针  "
                                        android:textColor="@color/light_grey"
                                        android:textSize="@dimen/textsizi3" />

                                    <TextView
                                        android:id="@+id/tv_tanzhen"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0个  "
                                        android:textColor="@color/light_grey"
                                        android:textSize="@dimen/textsizi3"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/iv_addstory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:src="@drawable/add2" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/control_marginbottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_today_people"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_left_right3"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="@dimen/padding_left_right4"
                        android:paddingRight="@dimen/padding_left_right4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="今日到店人数"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/title_text_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/padding_left_right"
                                android:text="0"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/title_text_size2"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/padding_top"
                                android:paddingTop="@dimen/padding_top"
                                android:src="@drawable/click" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <lecho.lib.hellocharts.view.PieChartView
                                android:id="@+id/pie_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/buttom_height"
                            android:layout_weight="1.3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="新客 "
                                        android:textColor="@color/blue"
                                        android:textSize="@dimen/textsizi3" />

                                    <TextView
                                        android:id="@+id/tv_newguest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/blue"
                                        android:textSize="@dimen/textsizi3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" 人"
                                        android:textColor="@color/blue"
                                        android:textSize="@dimen/textsizi3" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="老客 "
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/textsizi3" />

                                    <TextView
                                        android:id="@+id/tv_oldguest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/textsizi3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" 人"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/textsizi3" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/padding_left_right"
                                        android:layout_height="@dimen/padding_left_right"
                                        android:src="@drawable/blue" />

                                    <TextView
                                        android:id="@+id/tv_new"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/textsizi" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/padding_left_right"
                                        android:layout_height="@dimen/padding_left_right"
                                        android:src="@drawable/red" />

                                    <TextView
                                        android:id="@+id/tv_old"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text"
                                        android:textSize="@dimen/textsizi" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/control_marginbottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_left_right4"
                            android:paddingLeft="@dimen/padding_left_right4"
                            android:text="近七日客流趋势"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/title_text_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_left_right4"
                            android:paddingRight="@dimen/padding_left_right4">

                            <ImageView
                                android:layout_width="@dimen/padding_left_right"
                                android:layout_height="@dimen/padding_left_right"
                                android:src="@drawable/line_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 环境客流"
                                android:textColor="@color/text" />

                            <ImageView
                                android:layout_width="@dimen/padding_left_right"
                                android:layout_height="@dimen/padding_left_right"
                                android:layout_marginLeft="@dimen/image_small"
                                android:src="@drawable/line_red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 进店客流"
                                android:textColor="@color/text" />
                        </LinearLayout>
                    </RelativeLayout>

                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/linechart"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="@dimen/padding_left_right4"
                        android:paddingBottom="@dimen/padding_left_right"
                        android:paddingLeft="@dimen/padding_left_right"
                        android:paddingRight="@dimen/padding_left_right4" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/control_marginbottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_left_right4">

                    <RelativeLayout
                        android:id="@+id/rl_trading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日总花费(元)"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/title_text_size" />

                        <TextView
                            android:id="@+id/tv_tody_expenditure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/imageView2"
                            android:layout_toStartOf="@+id/imageView2"
                            android:gravity="right|center_vertical"
                            android:text="0.00"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/title_text_size" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/image_small"
                            android:src="@drawable/click" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_left_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="电话"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/textsizi3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/text"
                            android:textSize="@dimen/title_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/title_text_right"
                        android:layout_marginTop="@dimen/title_text_right"
                        android:scaleType="fitXY"
                        android:src="@drawable/vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/line_height"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="短信"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/textsizi3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/text"
                            android:textSize="@dimen/title_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/title_text_right"
                        android:layout_marginTop="@dimen/title_text_right"
                        android:scaleType="fitXY"
                        android:src="@drawable/vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/line_height"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="广告"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/textsizi3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/text"
                            android:textSize="@dimen/title_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/title_text_right"
                        android:layout_marginTop="@dimen/title_text_right"
                        android:scaleType="fitXY"
                        android:src="@drawable/vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/line_height"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="朋友圈"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/textsizi3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/text"
                            android:textSize="@dimen/title_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>