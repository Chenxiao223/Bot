<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加短信活动"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_left_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text=" 名称："
                android:textSize="@dimen/textsizi3" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入易记的名称"
                android:lines="1"
                android:maxLength="40"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/textsizi" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_crowd_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text7"
                android:layout_toRightOf="@+id/text7"
                android:gravity="center_vertical"
                android:text=" 客户类型："
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_crowd_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img7"
                android:layout_toStartOf="@+id/img7"
                android:text="到店人群"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_send_object"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text1"
                android:layout_toRightOf="@+id/text1"
                android:gravity="center_vertical"
                android:text=" 客户来源："
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_send_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img1"
                android:layout_toStartOf="@+id/img1"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_smstype"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text5"
                android:layout_toRightOf="@+id/text5"
                android:gravity="center_vertical"
                android:text=" 短信类型："
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_smstype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img5"
                android:layout_toStartOf="@+id/img5"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_sms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text2"
                android:layout_toRightOf="@+id/text2"
                android:gravity="center_vertical"
                android:text=" 短信/闪信："
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img2"
                android:layout_toStartOf="@+id/img2"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text3"
                android:layout_toRightOf="@+id/text3"
                android:gravity="center_vertical"
                android:text=" 客户类型："
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img3"
                android:layout_toStartOf="@+id/img3"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_mark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagview_top"
            android:layout_marginTop="@dimen/line_height"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text4"
                android:layout_toRightOf="@+id/text4"
                android:gravity="center_vertical"
                android:text=" 跟进状态："
                android:textSize="@dimen/textsizi3" />

            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img4"
                android:layout_toStartOf="@+id/img4"
                android:text="请选择"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsizi" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_top_buttom"
                android:paddingTop="@dimen/padding_top_buttom"
                android:src="@drawable/click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height2"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imagview_top"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imagview_top"
                android:layout_centerVertical="true"
                android:layout_gravity="top"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center_vertical"
                android:text=" 测试号码："
                android:textSize="@dimen/textsizi3" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="可输入多个手机号，用换行分割"
                android:inputType="textMultiLine"
                android:maxHeight="120dp"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/textsizi" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/imagview_top"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:background="@color/blue"
            android:text="@string/commit"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>