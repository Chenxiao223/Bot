<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
    >

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/made_spread_image"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/describe_et"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="添加描述"/>

        <EditText
            android:id="@+id/add_address"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="添加门店地址"/>

        <EditText
            android:id="@+id/add_phone"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="添加电话"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttom_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_left_right4"
        android:layout_marginLeft="@dimen/padding_left_right2"
        android:layout_marginRight="@dimen/padding_left_right2"
        android:background="@color/blue"
        android:text="@string/confirm"
        android:textColor="@color/white"/>
</RelativeLayout>