<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiziyun.dmptest.bot.ui.activity.SpreadActivity">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="上传素材"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        android:background="@drawable/homepagebg"
        android:id="@+id/spread_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/spread_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
