<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="@dimen/padding_left_right3"
            android:paddingRight="@dimen/padding_left_right3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_left_right5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="功能"
                android:textColor="@color/text2" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/padding_left_right3"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="7dp"
                android:src="@drawable/cross" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/list_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_left_right5">

            <LinearLayout
                android:id="@+id/line_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_left_right"
                    android:src="@drawable/detail" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="明细"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/text_sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_examine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_left_right"
                    android:src="@drawable/examine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="查看"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/text_sp_12" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>