<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiziyun.dmptest.bot.ui.activity.AddCircleFriendsActivity">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:layout_below="@+id/iv_system"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择人群"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginTop="@dimen/control_padding"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_left_right4"
                android:paddingRight="@dimen/padding_left_right4">

                <RelativeLayout
                    android:id="@+id/rl_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/text1"
                        android:layout_toRightOf="@+id/text1"
                        android:text="选择地域"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="选择城市"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="年龄"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="不限"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />
                </RelativeLayout>

                <com.zhiziyun.dmptest.bot.util.RangeSeekBar
                    android:id="@+id/rangeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:id="@+id/rl_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="不限"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:id="@+id/rl_educationTypes"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="学历"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_educationTypes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="不限"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:id="@+id/rl_relationshipStatusTypes"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="婚姻状态"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_relationshipStatusTypes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="不限"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:id="@+id/rl_crowd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="种子人群"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_crowd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="请选择"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="出价"
                        android:textSize="@dimen/textsizi" />

                    <EditText
                        android:id="@+id/et_offer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="1234567890."
                        android:gravity="right|center_vertical"
                        android:hint="每日投放预算"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="@dimen/textsizi" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/tv_scope"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/imagview_top"
                    android:gravity="center_vertical"
                    android:text="可出价范围：30-200元" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:id="@+id/rl_AudienceNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="预估数"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="点击查看"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top">

                    <TextView
                        android:id="@+id/about_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="大概覆盖人数:"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_approximateCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="--"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imagview_top">

                    <TextView
                        android:id="@+id/expect_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="大概覆盖人数:"
                        android:textSize="@dimen/textsizi" />

                    <TextView
                        android:id="@+id/tv_impression"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="--"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsizi" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_h3">

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttom_height"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/padding_left_right4"
                    android:layout_marginLeft="@dimen/padding_left_right2"
                    android:layout_marginRight="@dimen/padding_left_right2"
                    android:background="@color/blue"
                    android:text="@string/next"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
