<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_h"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/listview_h"
            android:layout_height="match_parent"
            android:padding="@dimen/control_padding"
            android:src="@drawable/man" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_top"
            android:paddingTop="@dimen/padding_top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/padding_left_right3"
                    android:layout_height="match_parent"
                    android:padding="@dimen/image_small"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="2017-11-06 12:32:45"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsizi" />

                <ImageView
                    android:layout_width="@dimen/padding_left_right3"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="@dimen/padding_top"
                    android:paddingBottom="@dimen/padding_top"
                    android:src="@drawable/click" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/padding_left_right3"
                    android:layout_height="match_parent"
                    android:padding="@dimen/image_small"
                    android:src="@drawable/phone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品牌:"
                            android:textSize="@dimen/textsizi" />

                        <TextView
                            android:id="@+id/tv_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APPLE"
                            android:textSize="@dimen/textsizi" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="型号:"
                            android:textSize="@dimen/textsizi" />

                        <TextView
                            android:id="@+id/tv_Model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxEms="8"
                            android:singleLine="true"
                            android:text="APPLE"
                            android:textSize="@dimen/textsizi" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/padding_left_right3"
                    android:layout_height="match_parent"
                    android:padding="@dimen/image_small"
                    android:src="@drawable/position" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离:"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textsizi" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5米至2.15米"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textsizi" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_small"
        android:scaleType="fitXY"
        android:src="@drawable/grayline" />
</LinearLayout>