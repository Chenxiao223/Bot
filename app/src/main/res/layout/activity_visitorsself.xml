<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="访客详情"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <lib.homhomlib.design.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/slidingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sliding_mode="both"
        tools:layout_editor_absoluteX="@dimen/absolute"
        tools:layout_editor_absoluteY="@dimen/absolute">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_left_right"
                    android:text="基本属性"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/title_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listview_h"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:padding="@dimen/control_padding"
                        android:src="@drawable/default_head" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="年龄："
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textsizi2" />

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未知"
                                android:textSize="@dimen/textsizi2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="婚姻："
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textsizi2" />

                            <TextView
                                android:id="@+id/tv_marriage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未知"
                                android:textSize="@dimen/textsizi2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="性别："
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textsizi2" />

                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未知"
                                android:textSize="@dimen/textsizi2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right"
                    android:paddingLeft="@dimen/padding_left_right"
                    android:text="设备属性"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/title_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_left_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_left_right3"
                        android:layout_marginTop="@dimen/padding_left_right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品牌："
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsizi2" />


                        <TextView
                            android:id="@+id/tv_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未知"
                            android:textSize="@dimen/textsizi2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_left_right3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="型号："
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsizi2" />

                        <TextView
                            android:id="@+id/tv_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未知"
                            android:textSize="@dimen/textsizi2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_left_right3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mac："
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsizi2" />

                        <TextView
                            android:id="@+id/tv_mac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未知"
                            android:textSize="@dimen/textsizi2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/padding_left_right3"
                            android:text="设备号："
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsizi2" />

                        <TextView
                            android:id="@+id/tv_did"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未知"
                            android:textSize="@dimen/textsizi2" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right"
                    android:paddingLeft="@dimen/padding_left_right"
                    android:text="应用偏好"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/title_text_size" />

                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/tcl_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_left_right"
                    app:container_background_color="#00000000"
                    app:container_border_color="#f9f9f9"
                    app:container_border_radius="0dp"
                    app:container_border_width="4dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="@dimen/padding_left_right"
                    app:tag_clickable="false"
                    app:tag_theme="random"
                    app:tag_vertical_padding="10px"
                    app:vertical_interval="@dimen/padding_left_right" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right"
                    android:paddingLeft="@dimen/padding_left_right"
                    android:text="游戏兴趣"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/title_text_size" />

                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/tcl_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_left_right"
                    app:container_background_color="#00000000"
                    app:container_border_color="#f9f9f9"
                    app:container_border_radius="0dp"
                    app:container_border_width="4dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="@dimen/padding_left_right"
                    app:tag_clickable="false"
                    app:tag_theme="random"
                    app:tag_vertical_padding="10px"
                    app:vertical_interval="@dimen/padding_left_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right"
                    android:paddingLeft="@dimen/padding_left_right"
                    android:text="最常使用APP"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/title_text_size" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/line_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_left_right"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_left_right" />

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/line_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right4"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近访问日期："
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right4"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left_right">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="访问次数："
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_left_right4"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平均驻点时长："
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_text_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </lib.homhomlib.design.SlidingLayout>
</LinearLayout>