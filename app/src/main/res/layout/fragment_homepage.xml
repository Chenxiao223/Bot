<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/homepagebg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_left_right2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:paddingTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp">

                            <ImageView
                                android:id="@+id/iv_head"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/head" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/shape_round" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_companyname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxEms="8"
                            android:singleLine="true"
                            android:text="上海智子信息"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="门店  "
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsizi3" />

                            <TextView
                                android:id="@+id/tv_story"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0个"
                                android:textColor="@color/white"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  探针  "
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsizi3" />

                            <TextView
                                android:id="@+id/tv_tanzhen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0个"
                                android:textColor="@color/white"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_addstory"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:padding="5dp"
                                android:src="@drawable/add" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/control_marginbottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_today_people"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_left_right3"
                        android:paddingLeft="@dimen/padding_left_right"
                        android:paddingRight="@dimen/padding_left_right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="今日到店人数"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/title_text_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人  "
                                android:textColor="@color/blue"
                                android:textSize="@dimen/textsizi" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:src="@drawable/click" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/padding_left_right"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <lecho.lib.hellocharts.view.PieChartView
                                android:id="@+id/pie_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/padding_left_right"
                                    android:layout_height="@dimen/padding_left_right"
                                    android:src="@drawable/green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 新客 "
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:id="@+id/tv_newguest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 人"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:id="@+id/tv_new"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/padding_left_right"
                                    android:layout_height="@dimen/padding_left_right"
                                    android:src="@drawable/blue" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 老客 "
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:id="@+id/tv_oldguest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 人"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:id="@+id/tv_old"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/title_text_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/control_marginbottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/grayline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/image_small"
                        android:paddingLeft="@dimen/padding_left_right"
                        android:text="近七日客流趋势"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/title_text_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/padding_left_right">

                            <ImageView
                                android:layout_width="@dimen/padding_left_right"
                                android:layout_height="@dimen/padding_left_right"
                                android:src="@drawable/blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 环境客流" />

                            <ImageView
                                android:layout_width="@dimen/padding_left_right"
                                android:layout_height="@dimen/padding_left_right"
                                android:layout_marginLeft="@dimen/image_small"
                                android:src="@drawable/green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 进店客流" />
                        </LinearLayout>
                    </RelativeLayout>

                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/linechart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="@dimen/padding_left_right"
                        android:paddingRight="@dimen/padding_left_right" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>