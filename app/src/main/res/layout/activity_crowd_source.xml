<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/homepagebg" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@drawable/homepagebg">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/activity_title"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_title_padding"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择人群"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_crowd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="到店人群"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_crowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_toStartOf="@+id/imageView1"
            android:text="请选择"
            android:textSize="@dimen/textsizi" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/imagview_top"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding"
            android:src="@drawable/click" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wifi_crowd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="wifi人群"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_wifi_crowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:text="请选择"
            android:textSize="@dimen/textsizi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/imagview_top"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding"
            android:src="@drawable/click" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_click_crowd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagview_top"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="点击人群"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_click_crowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:text="请选择"
            android:textSize="@dimen/textsizi" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/imagview_top"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding"
            android:src="@drawable/click" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttom_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/imagview_top"
            android:layout_marginLeft="@dimen/padding_left_right2"
            android:layout_marginRight="@dimen/padding_left_right2"
            android:background="@color/blue"
            android:text="@string/commit"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>