<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_left_right"
        android:paddingLeft="@dimen/padding_left_right4"
        android:paddingRight="@dimen/padding_left_right4"
        android:paddingTop="@dimen/padding_left_right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="8"
                android:singleLine="true"
                android:text="充值"
                android:textColor="@color/text2"
                android:textSize="@dimen/textsizi" />

            <ch.ielse.view.SwitchView
                android:id="@+id/swich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/padding_left_right"
                app:primaryColor="@color/blue" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="曝光"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_exposure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="点击"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="点击率"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_exposure_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="花费"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="出价"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="日预算"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

            <TextView
                android:id="@+id/tv_budget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_small"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_audit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_sp_12" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height2"
        android:background="@color/list_line" />
</LinearLayout>